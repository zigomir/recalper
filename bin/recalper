#!/usr/bin/env node

var program = require('commander')

program
  .version(require('../package').version)
  .usage('<input> <json> <output>')
  .parse(process.argv)

function help () {
  program.parse(process.argv)
  if (program.args.length < 3) return program.help()
}
help()

var fs = require('fs')
var input = program.args[0]
var output = program.args[2]

var inputFileStr = fs.readFileSync(input, 'utf8')
var manifest = JSON.parse(fs.readFileSync(program.args[1], 'utf8'))

var keyToFind = 'path'
var keyToReplace = 'hashedPath'

if (Array.isArray(manifest)) {
  manifest.forEach(function (m) {
    inputFileStr = inputFileStr.replace(m[keyToFind], m[keyToReplace])
  })
} else {
  Object.keys(manifest).forEach(function (key) {
    inputFileStr = inputFileStr.replace(manifest[key][keyToFind], manifest[key][keyToReplace])
  })
}

fs.writeFile(output, inputFileStr)
